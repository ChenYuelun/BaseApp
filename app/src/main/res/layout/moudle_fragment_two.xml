<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="TwoViewModel"
            type="com.example.base.baseapp.viewModel.FragmentTwoViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_centerTop"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="true"
            android:background="@drawable/account_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="63dp"
                android:layout_marginLeft="20dp">

                <com.example.base.baseapp.customerViews.CircleImageView
                    android:id="@+id/iv_user_header"
                    android:layout_width="60dp"
                    android:src="@drawable/default_head"
                    android:layout_height="60dp"
                    app:border_color="#99ffffff"
                    app:border_width="2dp" />

                <ImageView
                    android:id="@+id/iv_vip"
                    android:layout_width="60dp"
                    android:layout_height="63dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费登录"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_user_hello_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="你好，亲爱的会员"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView88"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow_white" />

        </LinearLayout>



    </FrameLayout>


</layout>